# i3status configuration file.
# see "man i3status" for documentation.

# General settings
general {
    colors = true
    interval = 5
}

# Define order of appearance
order += "cpu_usage"
order += "disk /"
order += "battery 0"
order += "load"
order += "tztime local"

# CPU usage (You might need to install i3status-contrib for this)
cpu_usage {
    format = "CPU: %usage"
    max_threshold = 80
}

# Disk usage
disk "/" {
    format = "Disk: %free"
}

# Battery status
battery 0 {
    format = "Battery: %status %percentage %remaining"
    format_down = "No Battery"
}

# Load average
load {
    format = "Load: %1min"
}

# Local time
tztime local {
    format = "Time: %Y-%m-%d %H:%M:%S"
}


